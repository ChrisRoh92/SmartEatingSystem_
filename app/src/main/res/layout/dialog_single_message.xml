<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_singlemessage_title" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="24sp"/>
        <View
                android:id="@+id/divider11"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/backgroundLight"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/dialog_singlemessage_title"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_singlemessage_subtitle" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/divider11"
                app:layout_constraintStart_toStartOf="@+id/dialog_singlemessage_title"/>
        <Button
                android:text="@android:string/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/dialog_singlemessage_btn_ok" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/dialog_singlemessage_message"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_singlemessage_message" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/dialog_singlemessage_subtitle"
                app:layout_constraintStart_toStartOf="@+id/dialog_singlemessage_subtitle"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>