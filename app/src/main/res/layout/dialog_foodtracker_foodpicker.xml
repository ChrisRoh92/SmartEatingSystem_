<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:cardCornerRadius="0dp" app:contentPadding="0dp"
        app:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/foodpicker_tv_menge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/foodpicker_btn_menge"
                app:layout_constraintStart_toStartOf="@+id/foodpicker_btn_menge"
                app:layout_constraintTop_toBottomOf="@+id/foodpicker_sk_menge" />
        <SeekBar
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="10dp"
                android:max="1000"
                android:progress="100"
                android:id="@+id/foodpicker_sk_menge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/foodpicker_btn_menge"/>
        <Button
                android:text="Speichern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodpicker_btn_save"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/divider5" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:cardBackgroundColor="@color/colorAccent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="Kartoffel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/foodpicker_tv_title"
                        android:textColor="@android:color/background_light" android:textSize="24sp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:text="GemÃ¼se"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/foodpicker_tv_subtitle" app:layout_constraintStart_toStartOf="@+id/foodpicker_tv_title"
                        app:layout_constraintTop_toBottomOf="@+id/foodpicker_tv_title" android:textSize="12sp"
                        android:textColor="@color/backgroundLight"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                android:id="@+id/linearLayout" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/foodpicker_tv_kcal">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ProgressBar
                            android:id="@+id/foodpicker_bar_carbs"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:max="100"
                            android:progress="0"
                            app:layout_constraintBottom_toTopOf="@+id/foodpicker_tv_carbs"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                            android:text="Kohlenhydrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            app:layout_constraintStart_toStartOf="@+id/foodpicker_bar_carbs"
                            app:layout_constraintEnd_toEndOf="@+id/foodpicker_bar_carbs"
                            app:layout_constraintBottom_toTopOf="@+id/foodpicker_bar_carbs"
                            android:textColor="@color/textColor1"/>

                    <TextView
                            android:id="@+id/foodpicker_tv_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/foodpicker_bar_carbs"
                            app:layout_constraintStart_toStartOf="@+id/foodpicker_bar_carbs" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ProgressBar
                            android:id="@+id/foodpicker_bar_protein"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:max="100"
                            android:progress="0"
                            app:layout_constraintBottom_toTopOf="@+id/foodpicker_tv_protein"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                            android:text="Proteine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView201"
                            app:layout_constraintStart_toStartOf="@+id/foodpicker_bar_protein"
                            app:layout_constraintEnd_toEndOf="@+id/foodpicker_bar_protein"
                            app:layout_constraintBottom_toTopOf="@+id/foodpicker_bar_protein"
                            android:textColor="@color/textColor1"/>

                    <TextView
                            android:id="@+id/foodpicker_tv_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/foodpicker_bar_protein"
                            app:layout_constraintStart_toStartOf="@+id/foodpicker_bar_protein" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ProgressBar
                            android:id="@+id/foodpicker_bar_fett"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:max="100"
                            android:progress="0"
                            app:layout_constraintBottom_toTopOf="@+id/foodpicker_tv_fett"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                            android:text="Fett"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView202"
                            app:layout_constraintStart_toStartOf="@id/foodpicker_bar_fett"
                            app:layout_constraintEnd_toEndOf="@id/foodpicker_bar_fett"
                            app:layout_constraintBottom_toTopOf="@id/foodpicker_bar_fett"
                            android:textColor="@color/textColor1"/>

                    <TextView
                            android:id="@+id/foodpicker_tv_fett"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/foodpicker_bar_fett"
                            app:layout_constraintStart_toStartOf="@id/foodpicker_bar_fett" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </LinearLayout>
        <Button
                android:text="Menge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodpicker_btn_menge" app:icon="@drawable/ic_create_white"
                app:iconSize="20dp" app:iconPadding="20dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/foodpicker_sk_menge"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:insetTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView5"
                android:insetBottom="10dp"/>
        <TextView
                android:text="Energie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView35" app:layout_constraintEnd_toEndOf="@+id/foodpicker_tv_menge"
                app:layout_constraintStart_toStartOf="@+id/foodpicker_tv_menge" android:textColor="@color/textColor1"
                android:textSize="18sp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/foodpicker_tv_menge"/>

        <ProgressBar
                android:id="@+id/foodpicker_bar_kcal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:max="1000"
                android:progress="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView35" />

        <TextView
                android:id="@+id/foodpicker_tv_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/textView35"
                app:layout_constraintStart_toStartOf="@+id/textView35"
                app:layout_constraintTop_toBottomOf="@+id/foodpicker_bar_kcal" />
        <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/backgroundLight"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
        <Button
                android:text="Abbrechen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodpicker_btn_abort"
                app:layout_constraintTop_toTopOf="@+id/foodpicker_btn_save" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/foodpicker_btn_save"
                app:layout_constraintEnd_toStartOf="@+id/foodpicker_btn_save" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" style="@style/Widget.MaterialComponents.Button.TextButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
